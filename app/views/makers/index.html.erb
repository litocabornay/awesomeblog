<% provide(:title,"メーカーの登録") %>
<div class="container-fluid" style="margin-right: 20px; margin-left: 20px;">  
          <h3>オートコンプリート用</h3>
          <h4>機器名追加</h4>

<div class="btn-group" >
<a href="/safes" class="btn btn-default"><i class="fa fa-bars"></i> パチンコ履歴</a>
<a href="/slot_history" class="btn btn-default"><i class="fa fa-bolt"></i> セルのみ</a>
</div>

          <div class="row">
          <div class="col-md-6 col-md-offset-3">
          <!-- -- -->
          <%= form_for (@maker) do |f| %>
          <%= render 'shared/error_message', object: f.object  %>
          <!-- -- -->
            <br>
            <div class="row">
              <div class="large-12 columns form-width">
               <%= f.label :機器名 %>
                  <%= f.text_field :name, class: 'form-control' %>
              </div>
              
              <div class="large-12 columns form-width">
               <%= f.label :機器名 %>
                  <%= f.text_field :name, class: 'form-control', id: 'micropost_content' %>
              </div>
              
            </div>
            <br>
          <!-- -- -->
              <%= f.submit "追加", class: "btn btn-primary" %>
          <!-- -- -->
          <% end %>
          <!-- -- -->
          </div>
          </div>
          
          
          
          <ul class="makers">
          <%= will_paginate %>
          

             <table class="table font-small sampleTable">
               
               <thead>
              </thead>
               
               
              
               <tbody>
                 
                 <% @makers.each do |maker| %>
                  
                 <tr scope="row"> 
                 
              <td width="300"><%= maker.name %></td>
               <td width="50"><%= link_to "削除" , maker ,method: :delete, data: { confirm: "本当にこの機器名を削除しますか？" } %></td>
              
              <tr>
                  <% end %>
              
              </tbody>
              </table>

        
          <%= will_paginate %>
          </ul>



        </div>
      </div>
    </div>
  </div>
</div>