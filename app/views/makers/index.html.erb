<% provide(:title,"会社情報の登録") %>

<h4>御社様の会社情報をご記入ください。</h4>
<div class="container">
  <div class="form-center">
    <div class="box-whitesmoke">
      <div class="row">
        <div class="col-md-12 col-md-offset-3">
          
          <% provide(:title,"index") %>
          <h1>メーカー一覧</h1>
          <ul class="makers">
          <%= will_paginate %>
          <% @makers.each do |user| %>
          <%= render "makers/maker" %>
          <% end %>
          <%= will_paginate %>
          </ul>

          <!-- フォーム -->
          <div class="row">
          <div class="col-md-6 col-md-offset-3">
          <!-- -- -->
          <%= form_for (@maker) do |f| %>
          <!--urlいらない　→　ただのリフレッシュだから-->
          <!-- -- -->
          <%= render 'shared/error_message', object: f.object  %>
          <!-- -- -->
            <br>
            <div class="row">
              <div class="large-12 columns form-width">
               <%= f.label :メーカーを追加する %>
                  <%= f.text_field :name, class: 'form-control' %>
              </div>
            </div>
            <br>
          <!-- -- -->
              <%= f.submit "登録する", class: "btn btn-primary" %>
          <!-- -- -->
          <% end %>
          <!-- -- -->
          </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>