
<h4>スロット機器の詳細</h4>

<!--セル情報の一覧のフォーム(並び替え可能)-->
<div class="width_table">
<table class="table font-small sampleTable">
  <thead class="thead-inverse">
    <tr scope="row">
      <!--<th width="60">投稿者</th>-->
      <!--<th>ユーザーの会社名前</th>-->
      <th width="120"><%= sortable "created_at", "更新日" %></th>
      <th width="80"><%= sortable "status", "状況" %></th>
      <th width="100"><%= sortable "place", "前設置" %></th>
      <th width="170"><%= sortable "maker", "メーカー" %></th>
      <th width="400"><%= sortable "name", "機種名" %></th>

    </tr>
  </thead>
  <tbody>
      <tr scope="row">
        <%#= sell.user.name %>
        <%#= sell.user.detail.company_name %>
        <%#= sell.created_at %>
        <%#= I18n.l(sell.created_at, format: :long) %>
        <td><%= @sell.created_at.strftime("%y/%m/%d") %></td>
        <td><%= @sell.status %></td>
        <td><%= @sell.place %></td>
        <td><%= @sell.maker %></td>
        <td><%= @sell.name %></td>

      </tr>
 </tbody>
</table>
</div>



