<% provide(:title,"決済経過一覧") %>

  <div class="row">

<div style="width:100%;">
<h3>決済経過一覧</h3>





<div class="width_table">


<table class="table font-small2 sampleTable">
  <thead class="thead-inverse">
    <tr scope="row">

      <th class="width5vw smart2">ID<%#= sortable "id", "ID" %></th>
      
      <th class="width5vw smart2">機器番号<%#= sortable "id", "ID" %></th>
      
      <th class="width5vw smart2">登録日時<%#= sortable "create_at", "開始日時" %></th>
      <th class="width20vw">最終更新<%#= sortable "seller_id", "売り手" %></th>
      <th class="width10vw smart2">機種名<%#= sortable "seller_id", "売り手" %></th>
      <th class="width5vw smart">タイプ<%#= sortable "date_of_arrive", "到着予定日" %></th>
      <th class="width5vw">登録者<%#= sortable "confirm_price", "確定価格(全込)" %></th>
      <th colspan="1" width="80">出庫</th>

  </thead>
  <tbody>
    
   <% @safes.each do |safe| %>

   <%# @sell_staff = Sell.find(safe.sell_id)  %>
   <%# @user_staff = User.find(safe.buyer_id)  %>
   
      <tr scope="row">
       
        <td class="width5vw smart2"><%= safe.id %></td>
        <td class="width5vw smart2"><%= safe.created_at.strftime("%m/%d") %></td>

        <td class="width10vw smart2"><%= safe.updated_at.strftime("%m/%d") %></td>

        <td class="width5vw smart"><%= safe.name %></td>
        <td class="width5vw"><%= safe.type_machine %></td>
      

        
        <td class="width5vw smart"><%= safe.staff %></td>

       <td class="100">
         
        <%= link_to '出庫', edit_safe_path(safe) , :class => 'btn btn-primary small-zoom' %>
         
       </td>
              
 
 
 
      </tr>


        <% end %>
 </tbody>
</table>




<%= paginate @safes %>

</div>









</div>

</div>